{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://finalstatepress.com/schemas/dita-discovery/v3",
  "title": "DITA Package Discovery Contract",
  "description": "Stable discovery contract describing observable structure of a DITA package. Artifacts represent files, graph represents structural truth, and relationships are a backward-compatible projection of graph edges.",
  "type": "object",

  "required": ["artifacts", "relationships", "graph", "summary"],
  "additionalProperties": false,

  "properties": {

    "artifacts": {
      "type": "array",
      "description": "Complete inventory of discovered artifacts.",
      "items": { "$ref": "#/$defs/artifact" }
    },

    "relationships": {
      "type": "array",
      "description": "Backward-compatible flat projection of graph.edges.",
      "items": { "$ref": "#/$defs/edge" }
    },

    "graph": {
      "type": "object",
      "required": ["nodes", "edges"],
      "additionalProperties": false,
      "properties": {

        "nodes": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Package-relative artifact path."
          }
        },

        "edges": {
          "type": "array",
          "items": { "$ref": "#/$defs/edge" }
        }
      }
    },

    "summary": {
      "type": "object",
      "description": "Aggregate structural metrics.",
      "required": [
        "total_artifacts",
        "map_count",
        "topic_count",
        "media_count",
        "relationship_count"
      ],
      "additionalProperties": false,
      "properties": {
        "total_artifacts": { "type": "integer", "minimum": 0 },
        "map_count": { "type": "integer", "minimum": 0 },
        "topic_count": { "type": "integer", "minimum": 0 },
        "media_count": { "type": "integer", "minimum": 0 },
        "relationship_count": { "type": "integer", "minimum": 0 }
      }
    }
  },

  "$defs": {

    "artifact": {
      "type": "object",
      "required": ["path", "artifact_type"],
      "additionalProperties": false,

      "properties": {

        "path": {
          "type": "string"
        },

        "artifact_type": {
          "type": "string",
          "enum": ["map", "topic", "media"]
        },

        "classification": {
          "type": ["string", "null"],
          "description": "Semantic classification such as MAIN, ABSTRACT, GLOSSARY, CONTENT, UNKNOWN."
        },

        "confidence": {
          "type": ["number", "null"],
          "minimum": 0.0,
          "maximum": 1.0
        },

        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "size_bytes": {
              "type": "integer",
              "minimum": 0
            },
            "extension": {
              "type": "string"
            },
            "root_element": {
              "type": "string"
            },
            "contains_mapref": {
              "type": "boolean"
            },
            "contains_topicref": {
              "type": "boolean"
            },
            "node_count": {
              "type": "integer",
              "minimum": 0,
              "description": "Structural weight: number of reachable nodes in graph."
            }
          }
        },

        "notes": {
          "type": "array",
          "items": { "type": "string" }
        },

        "evidence": {
          "type": "array",
          "items": { "$ref": "#/$defs/evidence" }
        }
      },

      "allOf": [

        {
          "if": {
            "properties": { "artifact_type": { "const": "media" } }
          },
          "then": {
            "properties": {
              "classification": { "const": null },
              "confidence": { "const": null },
              "evidence": {
                "type": "array",
                "maxItems": 0
              }
            }
          }
        }

      ]
    },

    "edge": {
      "type": "object",
      "required": ["source", "target", "edge_type"],
      "additionalProperties": false,

      "properties": {

        "source": { "type": "string" },
        "target": { "type": "string" },

        "edge_type": {
          "type": "string",
          "enum": [
            "mapref",
            "topicref",
            "xref",
            "image",
            "object"
          ]
        },

        "pattern_id": {
          "type": ["string", "null"]
        }
      }
    },

    "evidence": {
      "type": "object",
      "required": ["pattern_id", "asserted_role", "confidence", "rationale"],
      "additionalProperties": false,

      "properties": {

        "pattern_id": { "type": "string" },

        "asserted_role": {
          "type": ["string", "null"]
        },

        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },

        "rationale": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }

  }
}